{
  "name": "shareit",
  "version": "1.0.0",
  "description": "Node.js-Server for PWA Text-Synchronisation (mit nodemon & BrowserSync)",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev-server": "nodemon server.js",
    "dev-client": "browser-sync start --proxy \"localhost:3000\" --port 3001 --ws --files \"../client/**/*.*\"",
    "dev-client-noopen": "browser-sync start --proxy \"localhost:3000\" --port 3001 --ws --no-open --files \"../client/**/*.*\""
  },
  "dependencies": {
    "express": "5.1.0",
    "multer": "2.0.1",
    "ws": "8.18.2"
  },
  "devDependencies": {
    "browser-sync": "3.0.4",
    "nodemon": "3.1.10"
  }
}
