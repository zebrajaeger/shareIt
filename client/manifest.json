{
  "name": "TextSync-App",
  "short_name": "TextSync",
  "description": "Echtzeit-Text- und Datei-Synchronisation als PWA",
  "start_url": "./index.html",
  "scope": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#4A90E2",
  "icons": [
    { "src": "icons/icon-192.png", "sizes": "192x192", "type": "image/png" },
    { "src": "icons/icon-512.png", "sizes": "512x512", "type": "image/png" }
  ],
  "share_target": {
    "action": "/upload",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "file": { "name": "file", "accept": ["*/*"] }
    }
  }
}